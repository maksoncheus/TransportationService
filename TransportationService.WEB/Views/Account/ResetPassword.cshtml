@model TransportationService.WEB.Models.ResetPasswordViewModel
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form class="text-center bg-secondary bg-opacity-10 rounded-3 p-4"
                asp-action="ResetPassword" asp-anti-forgery="true">
            <div asp-validation-summary="All" class="text-error"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Token" />
            <img src="~/src/images/logo.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal text-center">Сбросить пароль</h1>

            <div class="form-group mb-2 d-flex p-0 flex-column">
                <label asp-for="Password" class="control-label"></label>
                <input type="text" asp-for="Password" class="form-control col" />
                <span asp-validation-for="Password" class="text-error"></span>
            </div>
            <div class="form-group mb-2 d-flex p-0 flex-column">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input type="text" asp-for="ConfirmPassword" class="form-control col" />
                <span asp-validation-for="ConfirmPassword" class="text-error"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сбросить" class="btn btn-secondary rounded-pill" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>
@section Scripts {
    <script src="~/js/GetGeneratedPassword.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}