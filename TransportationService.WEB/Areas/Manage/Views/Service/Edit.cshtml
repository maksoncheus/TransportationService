@using TransportationService.WEB.Data.Entities
@model Cargo
<div class="container">
    <div class="row py-5">
        <div class="col-lg-9 mx-auto text-center">
            <p class="lead mb-0 secondary_accent_text">Изменить товар</p>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-9 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-error"></div>
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="Name" class="text-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RemainQuantity" class="control-label"></label>
                    <input asp-for="RemainQuantity" class="form-control" />
                    <span asp-validation-for="RemainQuantity" class="text-error"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn attention form-control" value="Изменить" />
                </div>
            </form>
        </div>
    </div>
</div>