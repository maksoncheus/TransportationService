@model TransportationService.WEB.Areas.Profile.Models.PasswordViewModel
@using Microsoft.AspNetCore.Identity.UI.V5.Pages.Account.Manage.Internal
@using TransportationService.WEB.Data
@{
    ViewData["Title"] = "Пароль";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div>
        <form asp-action="Password">
            <div asp-validation-summary="All" class="text-error"></div>
            <div class="main_accent_text">
                @if (ViewData[@AppConstValues.SuccessString] != null)
                {
                    <p>@ViewData[@AppConstValues.SuccessString]</p>
                }
            </div>
            <div class="text-error">
                @if (ViewData[@AppConstValues.ErrorString] != null)
                {
                    <p>@ViewData[@AppConstValues.ErrorString]</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-error"></span>
            </div>
            <div class="form-group">

                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-error"></span>
            </div>
            <div class="form-group mt-4 d-flex bg-opacity-100 justify-content-center">
                <input type="submit" value="Сохранить" class="w-50 btn main_accent text-white" />
            </div>
        </form>
    </div>
</div>