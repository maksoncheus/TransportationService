@model TransportationService.WEB.Areas.Profile.Models.PersonalDataViewModel
@using Microsoft.AspNetCore.Identity.UI.V5.Pages.Account.Manage.Internal;
@using TransportationService.WEB.Data
@{
    ViewData["Title"] = "Основная информация";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3>@ViewData["Title"]</h3>
<div class="row">
    <div>
        <form asp-action="Main">
            <div asp-validation-summary="All" class="text-error"></div>
            <div class="main_accent_text">
                @if (ViewData[@AppConstValues.SuccessString] != null)
                {
                    <p>@ViewData[@AppConstValues.SuccessString]</p>
                }
            </div>
            <div class="text-error">
                @if (ViewData[@AppConstValues.ErrorString] != null)
                {
                    <p>@ViewData[@AppConstValues.ErrorString]</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-error"></span>
            </div>
            <div class="form-group mt-4 d-flex bg-opacity-100 justify-content-center">
                <input type="submit" value="Сохранить" class="w-50 btn main_accent text-white" />
            </div>
        </form>
    </div>
</div>

